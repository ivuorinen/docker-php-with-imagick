{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":preserveSemverRanges",
        ":semanticCommits",
        ":labels(dependencies)"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch"],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        }
    ]
}
